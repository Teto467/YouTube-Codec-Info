{
  "manifest_version": 3,
  "name": "YouTube Codec Info",
  "version": "1.1",
  "description": "Displays video and audio codec info on the YouTube player. Controllable via popup.",
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["*://*.youtube.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "storage"
  ]
}