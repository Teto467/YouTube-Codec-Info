{
    "manifest_version": 3,
    "name": "YouTube Codec Info",
    "version": "1.0",
    "description": "Displays video and audio codec information directly on the YouTube player.",
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["content.js"],
        "css": ["style.css"],
        "run_at": "document_idle"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["inject.js"], 
        "matches": ["*://*.youtube.com/*"]
      }
    ],
    "permissions": [
    ]
  }